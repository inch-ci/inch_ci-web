
.mastfoot
  .inner
    %p
      = markdown t("shared.footer")

    %p
      - if current_user
        = link_to current_user.display_name, user_path(current_user)
        = "|"
        = link_to "Sign out", signout_path
      - else
        = link_to "Sign in with GitHub", signin_path

        |
        = link_to "Contact", "http://trivelop.de/imprint/"
        |
        = link_to "Imprint", "http://trivelop.de/imprint/"
        |
        = link_to "Data privacy", "http://trivelop.de/data_privacy/"
        |
        = link_to "Blog", "http://trivelop.de/"
